<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
			PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.examsystem.po.Admin" table="admin"><!-- 每个class对应一个持久化对象 -->
		<id name="number" type="string"><!-- id元素用来定义主键标识,并指定主键生成策略 -->
		</id>
		<property name="name"></property><!-- 映射name属性 -->
		<property name="pwd"></property><!-- 映射pwd属性 -->
	</class>	
</hibernate-mapping>