<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping 
			PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.examsystem.po.Teacher" table="teacher"><!-- 每个class对应一个持久化对象 -->
		<id name="teacherID" type="string"><!-- id元素用来定义主键标识,并指定主键生成策略 -->
			<column name="id"></column>
			<generator class="native"></generator>
		</id>
		<property name="password">
		<column name="password"/>
		</property><!-- 映射password属性 -->
		
		<property name="teacherName">
		<column name="name"></column>
		</property><!-- 映射studentName属性 -->
		
		<property name="photo">
		<column name="photo"></column>
		</property><!-- 映射result属性 -->
		
		
			<property name="tel">
		<column name="tel"></column>
		</property><!-- 映射sclass属性 -->
	</class>	
</hibernate-mapping>